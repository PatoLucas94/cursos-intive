{
  "AllowedHosts": "*",
  "ApiConnect": {
    "ApiConnectGeneratedFilePath": "../../../../build.apic/apic/gestion-identidad-bff-usuarios.yaml",
    "ApiConnectTemplatePath": "./Resources/gestion-identidad-bff-usuarios.txt"
  },
  "OpenApiInfo": {
    "Title": "Bff Usuarios",
    "Contact": "CredencialesDigitales@supervielle.com.ar",
    "TermsOfService": "http://supervielle.com.ar",
    "IbmName": "bff-usuarios"
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Bff Usuarios",
        "Uri": "/health-ui"
      }
    ],
    "EvaluationTimeOnSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Settings.Configuration", "Serilog.Formatting.Compact" ],
    "MinimumLevel": {
      "Default": "Warning"
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '%/health%' or RequestPath like '%/info'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/app.log",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "retainedFileCountLimit": 3,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 500000000 //500mb
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 50000000, //50mb
          "buffered": false,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
