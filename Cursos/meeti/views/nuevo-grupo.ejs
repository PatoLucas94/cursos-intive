<main class="contenedor contenedor-formularios no-padding">

    <h1><%= nombrePagina%></h1>

    <form action="/nuevo-grupo" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Nombre Grupo">
        </div>

        <div class="campo-descripcion">
            <label for="">Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" name="descripcion" id="x">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>

        <div class="campo">
            <label for="categoria">Categoria</label>
            <select name="categoria" id="">
                <option value="" selected disabled> -- Elige una Categoria --</option>
                <% categorias.foreach(categoria => {%>
                    <option value="<%= categoria.id%>"><%= categoria.nombre %></option>

                <%}) %>

            </select>
        </div>

        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" name="imagen">
        </div>

        <div class="campo">
            <label for="imagen">Sitio Web</label>
            <input type="url" name="url" placeholder="Tu sitio web">
        </div>

        <div class="campo-enviar">
            <input type="submit" value="Crear Grupo" class="btn btn-rosa">
        </div>

    </form>

</main>